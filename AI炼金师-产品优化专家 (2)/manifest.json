{
  "manifest_version": 3,
  "name": "AI炼金师 - 产品优化专家",
  "version": "2.0.2",
  "description": "AI炼金师 - 产品优化专家 v2.0.2 - 智能化产品信息优化工具，支持DeepSeek、通义千问、百炼等AI平台，将普通产品信息转化为高转化率的优质内容",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://erp.91miaoshou.com/*",
    "https://api.deepseek.com/*",
    "https://dashscope.aliyuncs.com/*",
    "https://*.ozon.ru/*",
    "https://seller.ozon.ru/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI炼金师 - 产品优化专家"
  },
  "content_scripts": [
    {
      "matches": [
        "https://erp.91miaoshou.com/*",
        "https://*.ozon.ru/*",
        "https://seller.ozon.ru/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "modules/*.js",
        "*.svg",
        "*.png"
      ],
      "matches": [
        "https://erp.91miaoshou.com/*",
        "https://*.ozon.ru/*",
        "https://seller.ozon.ru/*"
      ]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}